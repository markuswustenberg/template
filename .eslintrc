extends:
  - 'eslint:recommended'
  - 'plugin:react/recommended'
env:
  browser: true
  es6: true
plugins:
  - react
rules:
  indent:
    - 2
    - 2
  linebreak-style:
    - 2
    - unix
  quotes:
    - 2
    - single
  semi:
    - 2
    - never
  react/prop-types: 0
parserOptions:
  ecmaVersion: 7
  ecmaFeatures:
    jsx: true
    experimentalObjectRestSpread: true
  sourceType: module
